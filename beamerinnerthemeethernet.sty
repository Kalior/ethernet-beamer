% Title page
\defbeamertemplate*{title page}{ethernet}[1][] {
  \vskip2cm%
  \begin{beamercolorbox}[wd=12cm, leftskip=1cm, sep=8pt, #1]{title page header}
    \huge
    \usebeamerfont{title}\inserttitle\par
  \end{beamercolorbox}

  \vskip 2cm

  %\pgfsetfillopacity{0.5}
  \begin{beamercolorbox}[wd=12cm, leftskip=1cm, #1]{author}
    \usebeamerfont{author}\insertauthor
  \end{beamercolorbox}

  \vskip0.2cm
  \begin{beamercolorbox}[wd=12cm, leftskip=1cm, #1]{date}
    \small
    \usebeamerfont{author}\insertdate
  \end{beamercolorbox}

  \vfil
}

