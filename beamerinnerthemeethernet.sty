% Title page
\defbeamertemplate*{title page}{ethernet}[1][] {
  \vskip2cm%
  \begin{beamercolorbox}[wd=12cm, leftskip=0.2cm, sep=8pt, #1]{title page header}
    \usebeamerfont{title}\inserttitle\par
  \end{beamercolorbox}

  \vskip 1cm

  %\pgfsetfillopacity{0.5}
  \begin{beamercolorbox}[wd=12cm, leftskip=0.2cm, sep=8pt, #1]{author}
    \usebeamerfont{author}\insertauthor
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=12cm, leftskip=0.2cm, sep=8pt, #1]{date}
    \usebeamerfont{date}\insertinstitute
  \end{beamercolorbox}

  \vskip0.2cm
  \begin{beamercolorbox}[wd=12cm, leftskip=0.2cm, sep=8pt, #1]{date}
    \usebeamerfont{date}\insertdate
  \end{beamercolorbox}

  \vfil
}

